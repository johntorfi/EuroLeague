@model EuropeanLeagues.Models.Club



@{
    ViewBag.Title = "Details";
}


<div class="indexBlack blackBg">
    <div class="table tableFont whiteText">

        <h2 class="text-left">Club details</h2>





        <div class="detailsBody">
            <div class="row">
                <div class="text-left col-md-8">
                    <dl class="dl-horizontal">
                        <dt>
                            @Html.DisplayNameFor(model => model.Team)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Team)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.Manager)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Manager)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.Venue)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Venue)
                        </dd>



                        <dt>
                            @Html.DisplayNameFor(model => model.League.LeagueName)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.League.LeagueName)
                        </dd>



                    </dl>
                </div>


                <div class="col-md-4">
                    <img src="@Url.Content(Model.ImageUrl)" height="200" width="190" />
                </div>
            </div>
            <br />

            <div class="row">
                <div class="text-left col-md-6">
                    <p>
                        @Html.ActionLink("Edit", "Edit", new { id = Model.Clubid }, new { @class = "btn btn-default" }) |
                        @Html.ActionLink("Delete", "Delete", new { id = Model.Clubid }, new { @class = "btn btn-default" }) |
                        @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-default" })
                    </p>
                </div>
            </div>


            <br />

            <div class="text-left col-md-12">
                <h3> Club Players</h3>
                <div>

                    @foreach (var Player in Model.Players)
                    {



                        @*<a href="@Url.Action("Details", new {id=Model.Playerid})">*@


                        <span class="myImgContainer">
                            <a href="@Url.Action("Details", new {id=Model.Clubid })">
                                <img class="myImgClub" src="@Url.Content(Player.Picture)" />
                                @*</a>*@

                        </span>
                        @*</a>*@

                    }

                </div>
            </div>
        </div>
    </div>
</div>
